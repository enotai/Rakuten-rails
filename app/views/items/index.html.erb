<h1>Items#index</h1>

<%= form_tag(items_path, method: :get) do %>
  <%= search_field_tag :keyword %>
  <%= submit_tag 'Search' %>
<% end %>

<table>
  <thead>
  <tr>
    <th>お気に入り</th>
    <th>商品画像</th>
    <th>商品名</th>
    <th>価格</th>
    <th>説明</th>
  </tr>
  </thead>

  <tbody>
  <% @items.each do |item| %>
    <tr>
      <td><a onclick=""><i class="fa fa-2x fa-heart-o"></i></a></th>
      <td><%= image_tag item.medium_image_urls[0]['imageUrl'] %></td>
      <td><%= link_to(item.name, item.url) %></td>
      <td><%= item.price %>円</td>
      <td><%= item.caption %></td>
    </tr>
    <% end %>
  </tbody>
</table>

